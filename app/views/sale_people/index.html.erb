<% if user_signed_in? %>
<div class="table_class car_class">
<h3>Sales Person Details</h3>
<div class="btn-group ">
<%= link_to "New Sales Person", new_sale_person_path, :class => "btn btn-primary"%>
</div>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead style="background-color:#006b96;color:#fff;">
    <tr>
      <th>Sl.no</th>
      <th>Sales person</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <%i=0%>
  <tbody>
    <% @sale_people.each do |sale_person| %>
      <tr>
        <td><%=i=i+1%></td>
        <td><%= sale_person.sales_person_id %></td>
        <td><%= sale_person.first_name %></td>
        <td><%= sale_person.last_name %></td>
        <td><%= sale_person.address %></td>
        <td><%= sale_person.phone_number %></td>
        <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_sale_person_path(sale_person) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, sale_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>