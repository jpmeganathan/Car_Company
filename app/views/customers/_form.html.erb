<div class="customer_page">
<%= form_for @customer, :html => {:class => "form-horizontal center",:multipart => true} do |f| %>
      <div class="form-group">
        <%= f.label :customer_id, "Customer ID", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :customer_id, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :first_name, "Firstname", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>    

      <div class="form-group">
        <%= f.label :last_name, "Lastname", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "Phone Number", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, "Address", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :city, "City", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :state, "State", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :country, "Country", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :pincode, "Pincode", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :pincode, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image, "Image Upload", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.file_field :image, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
      <div class="col-md-4" style="margin-left: 40%;">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
      </div>
      </div>
<% end %>