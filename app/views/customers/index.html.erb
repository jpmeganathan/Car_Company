<% if user_signed_in? %>
<div class="table_class car_class">
<h3>Customer Details</h3>
<div class="btn-group ">
<%= link_to "New Customer", new_customer_path, :class => "btn btn-primary"%>
</div>
</div>
<div class="tableclass">
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead style="background-color:#006b96;color:#fff;">
            <tr>
                <th>Sl.no</th>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
				<th>Country</th>
				<th>Pincode</th>
				<th>Image</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <%i=0%>
        <% @customers.each do |c| %>
       	<tbody>
            <tr>
            	<td><%=i=i+1%></td>
                <td><%=c.customer_id%></td>
                <td><%=c.first_name%></td>
                <td><%=c.last_name%></td>
                <td><%=c.phone_number%></td>
                <td><%=c.address%></td>
                <td><%=c.city%></td>
				<td><%=c.state%></td>
                <td><%=c.country%></td>
                <td><%=c.pincode%></td>
                <td><%= image_tag(c.image_url.to_s) %></td>
                <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_customer_path(c) %></td>
               <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, c, method: :delete, data: { confirm: 'Are you sure?' } %></td>       
            </tr>
        </tbody>
        <% end %>
    </table>
</div>
<% end %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js">
        $.noConflict();
        $(document).ready(function() {
        $('#example').DataTable();
        } );
    </script>
