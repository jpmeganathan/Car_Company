<% if user_signed_in? %>
<div class="table_class car_class">
<h3>Car Details</h3>
<div class="btn-group ">
<%= link_to "New Car", new_car_path, :class => "btn btn-primary"%>
</div>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead style="background-color:#006b96;color:#fff;">
    <tr>
      <th>Sl.no</th>
      <th>Car</th>
      <th>Serial no</th>
      <th>Make</th>
      <th>Model</th>
      <th>Color</th>
      <th>Year</th>
      <th>Car for sale</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <%i=0%>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= i=i+1%></td>
        <td><%= car.car_id %></td>
        <td><%= car.serial_no %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.color %></td>
        <td><%= car.year %></td>
        <td><%= car.car_for_sale %></td>
        <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_car_path(car) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
    <% end %>
  </tbody>
</table>
</div>
<%end%>
