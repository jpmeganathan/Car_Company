<div class="car_page">
<%= form_for @car, :html => {:class => "form-horizontal center",:multipart => true} do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :car_id, "Car ID", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :car_id, class: "form-control" %>
      </div>
  </div>
   
   <div class="form-group">
      <%= f.label :serial_no, "Serial No", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :serial_no, class: "form-control" %>
      </div>
  </div>


   <div class="form-group">
      <%= f.label :make, "Make", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :make, class: "form-control" %>
      </div>
  </div>

   <div class="form-group">
      <%= f.label :model, "Model", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :model, class: "form-control" %>
      </div>
  </div>

   <div class="form-group">
      <%= f.label :color, "Color", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :color, class: "form-control" %>
      </div>
  </div>

   <div class="form-group">
      <%= f.label :year, "Year", class: "col-md-4 control-label" %>
      <div class="col-md-6">
          <%= f.text_field :year, class: "form-control" %>
      </div>
  </div>

   <div class="form-group">
      <%= f.label :car_for_sale, "Car For Sale", class: "col-md-4 control-label" %>
      <div class="col-md-1">
          <%= f.check_box :car_for_sale, class: "form-control" %>
      </div>
  </div>

   <div class="form-group">
      <div class="col-md-4" style="margin-left: 40%;">
       <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
      </div>
  </div>
<% end %>
</div>