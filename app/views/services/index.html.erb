<% if user_signed_in? %>
<div class="table_class car_class">
<h3>Services</h3>
<div class="btn-group ">
<%= link_to "New Service", new_service_path, :class => "btn btn-primary"%>
</div>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead style="background-color:#006b96;color:#fff;">
    <tr>
      <th>Sl.No</th>
      <th>Service</th>
      <th>Service name</th>
      <th>Hour rate</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <%i=0%>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%=i=i+1%></td>
        <td><%= service.service_id %></td>
        <td><%= service.service_name %></td>
        <td><%= service.hour_rate %></td>
        <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_service_path(service) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>